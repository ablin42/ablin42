<div id="fullPage">
	<section class="section main-section hero" id="landing-section" data-anchor="landing">
		<h3>Hi, Im a <b>{ fullstack web developer }</b> and my name is</h3>
		<h1 class="hero-title">Andréas Blin</h1>
		<h2 class="hero-secondary-title">I will build the website you've been dreaming of</h2>

		<a href="#portfolio" class="action-link portfolio-link">My portfolio</a>

		<img src="/svg/undraw_freelancer.svg" class="freelancer-svg" alt="Freelance Illustration" />
		<div class="scroll-indicator"></div>
	</section>

	<section class="section main-section even" id="portfolio-section" data-anchor="portfolio">
		<h1 class="hero-title mt-2">Portfolio</h1>

		<a href="#skills" class="action-link inverted">My skills</a>
	</section>

	<section class="section main-section" id="skills-section" data-anchor="skills">
		<h1 class="hero-title mt-2 mb-0">Skills</h1>
		<p class="skills-text">Here is a non-exhaustive list of the technologies I work with...</p>

		<div class="skills-section-wrapper">
			<div class="skills-section">
				<h2>Front-end</h2>
				<div class="skills-wrapper">
					<h1>{</h1>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/javascript_icon.png" alt="Javascript" />
						</div>
						<label>Javascript</label>
					</div>

					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/html_icon.png" alt="HTML5" />
						</div>
						<label>HTML5</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/css_icon.png" alt="CSS3" />
						</div>
						<label>CSS3</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/vuejs_icon.png" alt="Vuejs" />
						</div>
						<label>Vue.js</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/bootstrap_icon.png" alt="Bootstrap" />
						</div>
						<label>Bootstrap</label>
					</div>
					<h1>}</h1>
				</div>
			</div>

			<div class="skills-section">
				<h2>Back-end</h2>
				<div class="skills-wrapper">
					<h1>{</h1>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/nodejs_icon.png" alt="NodeJS" />
						</div>
						<label>NodeJS</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/css_icon.png" alt="PHP" />
						</div>
						<label>PHP</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/database_icon.png" alt="Database SQL/noSQL" />
						</div>
						<label>SQL / noSQL</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/api_icon.png" alt="API" />
						</div>
						<label>API</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/s3_icon.png" alt="S3" />
						</div>
						<label>S3</label>
					</div>
					<h1>}</h1>
				</div>
			</div>

			<div class="skills-section">
				<h2>Misc</h2>
				<div class="skills-wrapper">
					<h1>{</h1>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/git_icon.png" alt="Git" />
						</div>
						<label>Git</label>
					</div>
					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/docker_icon.png" alt="Docker" />
						</div>
						<label>Docker</label>
					</div>

					<div class="wrapper-icon">
						<div>
							<img class="skill-icon" src="/img/icons/console_icon.png" alt="Shell" />
						</div>
						<label>Shell</label>
					</div>
					<h1>}</h1>
				</div>
			</div>
		</div>
		<a href="#contact" class="action-link m-auto">Contact me !</a>
	</section>

	<section class="section main-section even" id="contact-section" data-anchor="contact">
		<h1 class="hero-title mt-2">Contact</h1>

		<form class="col-md-6 offset-md-3 mt-5 p-0" id="contact" method="POST" action="/api/contact/">
			<div class="row">
				<div class="col-md-12">
					<label class="control-label">Email</label>
					<input placeholder="johndoe@gmail.com" type="email" name="email" id="email" required />
				</div>
			</div>
			<div class="row mt-2">
				<div class="col-md-12">
					<label class="control-label">Object</label>
					<input placeholder="Hello, I'm looking for someone to build my website..." type="text" name="title" id="title" required />
				</div>
				<div class="col-md-12 mt-2">
					<label class="control-label">Message</label>
					<textarea class="mb-0" id="content" rows="5" name="content" placeholder="Write your message here...." required></textarea>
				</div>
			</div>
			<input type="submit" class="action-btn inverted" value="Send" id="submit-contact" />
			<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
		</form>

		<div class="contact-footer">
			<ul>
				<li><i class="fas fa-phone"></i> +33 6 89 89 81 98</li>
				<li>ablin.dev@gmail.com <i class="fas fa-envelope"></i></li>
			</ul>
		</div>
	</section>
</div>

<script>
	new fullpage("#fullPage", {
		autoScrolling: true,

		anchors: ["landing", "portfolio", "skills"],
		navigation: true,
		navigationPosition: "right",
		navigationTooltips: ["Landing", "Portfolio", "Skills"],
		showActiveTooltip: false
		//slidesNavigation: false,
		//slidesNavPosition: "bottom"
	});
</script>

