					<div class="col-md-12">
						<label class="control-label">Email</label>
						<input placeholder="johndoe@gmail.com" type="email" name="email" id="email" required />
					</div>
				</div>
				<div class="row mt-2">
					<div class="col-md-12">
						<label class="control-label">Object</label>
						<input placeholder="Hello..." type="text" name="title" id="title" required />
					</div>
					<div class="col-md-12 mt-2">
						<label class="control-label">Message</label>
						<textarea class="mb-0" id="content" rows="5" name="content" placeholder="Write your message here...." required></textarea>
					</div>
				</div>
				<input type="submit" class="action-btn inverted" value="Send" id="submit-contact" />
