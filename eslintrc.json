{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  //"plugins": ["security"],
  "extends": ["eslint:recommended"], // "plugin:security/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "ignorePatterns": ["/node_modules/*", "/views/*"],
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": 0,
    "require-atomic-updates": 0,
    "no-undef": 0,
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": false
      }
    ]
  }
}
